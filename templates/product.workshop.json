{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "subtitle": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "dropdown"
          }
        },
        "1d473aca-7da0-49ae-8743-0fe18be022a1": {
          "type": "custom_liquid",
          "disabled": true,
          "settings": {
            "custom_liquid": "<div class=\"product__tax caption rte\">Gaat door bij: {{ product.selected_or_first_available_variant.metafields.custom.location }}<\/div>"
          }
        },
        "8413f971-2164-417d-8d2e-86216bd72bfd": {
          "type": "inventory",
          "disabled": true,
          "settings": {
            "text_style": "body",
            "inventory_threshold": 2,
            "show_inventory_quantity": true
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "custom_liquid_8rVkUx": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "<div class=\"ultimate-countdown\"><\/div>"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": false,
            "show_gift_card_recipient": true
          }
        },
        "product_info": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "<h4>Over {{product.title}}<\/h4>"
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "ingredients": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Wat gaan we allemaal doen?",
            "icon": "serving_dish",
            "content": "<p>{{ product.metafields.my_fields.ingredients | metafield_tag }}<\/p>",
            "page": ""
          }
        },
        "good_to_know": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Praktische info",
            "icon": "star",
            "content": "<p>{{ product.metafields.my_fields.advice_for_use | metafield_tag }}<\/p>",
            "page": ""
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Delen"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "subtitle",
        "price",
        "variant_picker",
        "1d473aca-7da0-49ae-8743-0fe18be022a1",
        "8413f971-2164-417d-8d2e-86216bd72bfd",
        "quantity_selector",
        "custom_liquid_8rVkUx",
        "buy_buttons",
        "product_info",
        "description",
        "ingredients",
        "good_to_know",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "",
        "media_size": "small",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "thumbnail_slider",
        "media_position": "left",
        "image_zoom": "hover",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 36
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "Ook leuk voor jou?",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "related-products"
  ]
}
