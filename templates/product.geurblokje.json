{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "subtitle": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "825b2d8c-d800-4a77-a3a7-073eff76f77d": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "{% if product.metafields.my_fields.discounts != '' %}<span class=\"price-item price-item--regular\">{{product.metafields.my_fields.discounts}}<\/span>{% endif %}"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": false
          }
        },
        "product_info": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "<h4>Over {{product.title}}<\/h4>"
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "78fb3c84-44ae-4d32-bf23-c1a98fb04484": {
          "type": "complementary",
          "settings": {
            "block_heading": "Past goed bij",
            "make_collapsible_row": true,
            "icon": "price_tag",
            "product_list_limit": 10,
            "products_per_page": 3,
            "pagination_style": "counter",
            "image_ratio": "square",
            "enable_quick_add": true
          }
        },
        "6edc873f-e57f-4fe7-886f-20c32d052fd2": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Wat zit er allemaal in?",
            "icon": "leaf",
            "content": "<p>{{ product.metafields.my_fields.ingredients | metafield_tag }}<\/p>",
            "page": ""
          }
        },
        "brand_info": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Waarom {{ product.vendor }}",
            "icon": "star",
            "content": "",
            "page": "{{ product.metafields.my_fields.brand_info.value }}"
          }
        },
        "shipping_policy": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Verzendkosten",
            "icon": "truck",
            "content": "<p><strong>Binnen België kost verzending €4,95, naar Nederland €5,95.<\/strong><\/p><p>Bestellingen worden met track & trace verzonden. De m\/v\/x van PostNl brengt het zo snel mogelijk naar jouw brievenbus. Reken gemiddeld op 3 werkdagen.<\/p>",
            "page": ""
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Delen"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "subtitle",
        "price",
        "825b2d8c-d800-4a77-a3a7-073eff76f77d",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "product_info",
        "description",
        "78fb3c84-44ae-4d32-bf23-c1a98fb04484",
        "6edc873f-e57f-4fe7-886f-20c32d052fd2",
        "brand_info",
        "shipping_policy",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "media_position": "left",
        "gallery_layout": "thumbnail",
        "media_size": "small",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 36,
        "padding_bottom": 36
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "Ook leuk voor jou?",
        "heading_size": "h2",
        "products_to_show": 4,
        "columns_desktop": 4,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "product-recommendations"
  ]
}
